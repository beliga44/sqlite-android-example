<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextTodoName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/todo_edit_text_hint"/>

        <EditText
            android:id="@+id/editTextTodoUpdateName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/update_todo"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonListTodo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/list_todo"/>

        <Button
            android:id="@+id/buttonCreateTodo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Todo"/>

        <Button
            android:id="@+id/buttonUpdateTodo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Todo"/>
    </LinearLayout>
</LinearLayout>